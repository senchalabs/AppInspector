{
    "manifest_version"       : 2,
    "minimum_chrome_version" : "31.0",

    "name"        : "App Inspector for Sencha",
    "description" : "Google Chrome™ Dev Tools extension for debugging Sencha™ applications.",
    "version"     : "1.1.1",

    "icons" : {
        "16"  : "workspace/resources/images/icon-16x16.png",
        "48"  : "workspace/resources/images/icon-48x48.png",
        "128" : "workspace/resources/images/icon-128x128.png"
    },

    "background" : {
        "page" : "background.html"
    },

    "devtools_page" : "devtools-page.html",

    //for debugging
    "options_page"  : "workspace/index.html",

    "content_security_policy" : "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "permissions" : [
        "tabs",
        "<all_urls>",
        "experimental"
    ]
}