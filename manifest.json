{
    "manifest_version": 2,
    "minimum_chrome_version": "20.0",    
    
    "name": "App Inspector for Sencha™",
    "description": "Google Chrome™ Dev Tools extension for debugging Sencha™ applications.",
    "version": "1.0",
    "icons": { 
        "128"   : "resources/images/icon_128.png",
        "48"    : "resources/images/icon_48.png" 
    },
    
    "background": {
        "page": "background.html"
    },
    "devtools_page": "devtools-page.html",
    "options_page": "inspector.html",
    "permissions": [
        "tabs",
        "<all_urls>"
    ]
}